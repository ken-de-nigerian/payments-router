{
    "name": "kendenigerian/payments-router",
    "description": "A unified payment abstraction layer for Laravel supporting multiple providers (Paystack, Flutterwave, Monnify, Stripe, PayPal) with automatic fallback, webhooks, and currency conversion",
    "keywords": [
        "laravel",
        "payment",
        "paystack",
        "flutterwave",
        "stripe",
        "paypal",
        "monnify",
        "payment-gateway",
        "payments",
        "webhook"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nwaneri Kenneth",
            "email": "you@example.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/kendenigerian/payments-router",
    "support": {
        "issues": "https://github.com/kendenigerian/payments-router/issues",
        "source": "https://github.com/kendenigerian/payments-router"
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.8",
        "stripe/stripe-php": "^13.0",
        "moneyphp/money": "^4.5"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "KenDeNigerian\\PaymentsRouter\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KenDeNigerian\\PaymentsRouter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "KenDeNigerian\\PaymentsRouter\\PaymentServiceProvider"
            ],
            "aliases": {
                "Payment": "KenDeNigerian\\PaymentsRouter\\Facades\\Payment"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
