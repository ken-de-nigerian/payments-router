{
  "name": "nwaneri/payments-router",
  "description": "Unified payment router for multiple providers with fallback, webhooks and currency conversion",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nwaneri Kenneth",
      "email": "you@example.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^9.0|^10.0|^11.0",
    "guzzlehttp/guzzle": "^7.0",
    "stripe/stripe-php": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Nwaneri\\PaymentsRouter\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Nwaneri\\PaymentsRouter\\PaymentServiceProvider"
      ],
      "aliases": {
        "Payment": "Nwaneri\\PaymentsRouter\\Facades\\Payment"
      }
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "orchestra/testbench": "^7.0"
  }
}